<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新图书</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @book], html: { class: 'chaos-form', multipart: true } do |f| %>
      <%= render "shared/admin/error_messages", target: @book %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">名称</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">图片</label>
          <div class="chaos-form-item">
            <%= f.file_field :image %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">作者</label>
          <div class="chaos-form-item">
            <%= f.text_field :author %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">出版社</label>
          <div class="chaos-form-item">
            <%= f.text_field :publisher %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">ISBN</label>
          <div class="chaos-form-item">
            <%= f.text_field :isbn %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">发行日期</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.date_select :published_at, :discard_day => true, :start_year => 2000 %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">价格</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.select :currency, [['人民币', Book::CURRENCY_RMB], ['美元', Book::CURRENCY_USD]] %></li>
              <li><%= f.text_field :price %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">简介</label>
          <div class="chaos-form-item">
            <%= f.kindeditor :description %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否可用</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :available, checked: true %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否可购</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :purchasable %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否精华</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :featured %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回图书列表', path: admin_books_path %>
      </div>
    <% end %>
  </div>
</div>