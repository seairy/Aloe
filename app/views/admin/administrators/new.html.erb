<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新用户</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @administrator], html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @administrator %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">角色</label>
          <div class="chaos-form-item">
            <%= f.collection_select :role_id, Role.all, :id, :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">账号</label>
          <div class="chaos-form-item">
            <%= f.text_field :account %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">密码</label>
          <div class="chaos-form-item">
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">密码确认</label>
          <div class="chaos-form-item">
            <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">姓名</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否启用</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :available, checked: true %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回用户列表', path: admin_administrators_path %>
      </div>
    <% end %>
  </div>
</div>