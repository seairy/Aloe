<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>缴费信息</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_tag 'nil', class: 'chaos-form' do %>
      <%= chaos_flash_tag %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">类型</label>
          <div class="chaos-form-item">
            <span><%= styled_boolean_tag @payment.revenue?, true_value: '实际缴费', false_value: '学会赠与' %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">金额</label>
          <div class="chaos-form-item">
            <span><%= @payment.amount %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">缴费日期</label>
          <div class="chaos-form-item">
            <span><%= date_tag @payment.paid_at %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">会费延长日期</label>
          <div class="chaos-form-item">
            <span><%= date_tag @payment.before_expired_at %> 至 <%= date_tag @payment.extended_to %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">备注</label>
          <div class="chaos-form-item">
            <%= raw @payment.remark %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= chaos_button_to name: '返回会员信息', path: url_for([:admin, @payment.member]) %>
      </div>
    <% end %>
  </div>
</div>