<div id="main">
  <div id="location"><%= location_tag %></div>
  <div class="resource-list">
    <ul>
      <% @resources.each do |resource| %>
      <li>
        <div class="image"></div>
        <div class="property">
          <h2><%= link_to resource.title.truncate(24), resource %><span><%= date_tag resource.displayed_at %></span></h2>
          <div class="category"><%= resource.category.name %></div>
          <div class="description"><%= (strip_tags resource.description).strip.truncate(120) %></div>
        </div>
        <div class="clear"></div>
      </li>
      <% end %>
    </ul>
    <div class="pagination"><%= will_paginate @resources %></div>
  </div>
</div>
<%= render 'side' %>