<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>通讯信息</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_tag 'nil', class: 'chaos-form' do %>
      <%= flash_tag %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">名称</label>
          <div class="chaos-form-item">
            <span><%= @newsletter.name %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">图片</label>
          <div class="chaos-form-item">
            <span><%= chaos_image_tag @newsletter.image %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">简介</label>
          <div class="chaos-form-item">
            <span><%= raw @newsletter.description %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">资源URL</label>
          <div class="chaos-form-item">
            <span><%= @newsletter.asset_url %></span>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= chaos_button_to_edit edit_admin_newsletter_path(@newsletter) %>
        <%= chaos_button_to_destroy url_for([:admin, @newsletter]) %>
        <%= chaos_button_to_list admin_newsletters_path %>
      </div>
    <% end %>
  </div>
</div>