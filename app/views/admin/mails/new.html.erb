<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>邮件群发</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @mail], html: { class: 'chaos-form', multipart: true } do |f| %>
      <%= render "shared/admin/error_messages", target: @mail %>
      <%= hidden_field_tag :to, @recipients_type %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">收件人</label>
          <div class="chaos-form-item">
            <span><%= @recipients_caption %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">主题</label>
          <div class="chaos-form-item">
            <%= f.text_field :subject %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">内容</label>
          <div class="chaos-form-item">
            <%= f.kindeditor :content %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
      </div>
    <% end %>
  </div>
</div>