<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新联系人</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @member, @contact], html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @contact %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">会员名称</label>
          <div class="chaos-form-item">
            <span><%= @member.chinese_name %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">联系人姓名</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">联系人职务</label>
          <div class="chaos-form-item">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">联系人电话（座机）</label>
          <div class="chaos-form-item">
            <%= f.text_field :phone %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">联系人电话（移动）</label>
          <div class="chaos-form-item">
            <%= f.text_field :mobile %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">传真</label>
          <div class="chaos-form-item">
            <%= f.text_field :fax %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回会员信息', path: url_for([:admin, @member]) %>
      </div>
    <% end %>
  </div>
</div>