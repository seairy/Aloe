<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>用户信息</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_tag 'nil', class: 'chaos-form' do %>
      <%= chaos_flash_tag %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">分类</label>
          <div class="chaos-form-item">
            <span><%= @resource.category.name %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">标题</label>
          <div class="chaos-form-item">
            <span><%= @resource.title %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">作者</label>
          <div class="chaos-form-item">
            <span><%= @resource.author %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">单位</label>
          <div class="chaos-form-item">
            <span><%= @resource.organization %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">图片</label>
          <div class="chaos-form-item">
            <span><%= default_image_tag @resource.image %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">描述</label>
          <div class="chaos-form-item">
            <span><%= @resource.description %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">媒体类型</label>
          <div class="chaos-form-item">
            <span><%= resource_media_type_tag @resource.media_type %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否可见</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= styled_boolean_tag @resource.visible? %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否精华</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= styled_boolean_tag @resource.featured? %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">显示时间</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= datetime_tag @resource.displayed_at %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">创建时间</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= datetime_tag @resource.created_at %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">更新时间</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= datetime_tag @resource.updated_at %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= chaos_button_to_edit edit_admin_resource_path(@resource) %>
        <%= chaos_button_to_destroy url_for([:admin, @resource]) %>
        <%= chaos_button_to_list admin_resources_path %>
      </div>
    <% end %>
  </div>
</div>