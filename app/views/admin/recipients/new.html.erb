<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新邮箱</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @member, @recipient], html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @recipient %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">会员姓名/名称</label>
          <div class="chaos-form-item">
            <span><%= @member.chinese_name %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">邮箱地址</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否有效</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :available, checked: true %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否订阅</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :subscribed, checked: true %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回会员信息', path: url_for([:admin, @member]) %>
      </div>
    <% end %>
  </div>
</div>