<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>编辑期刊分类信息</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @publication_category], html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @publication_category %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">期刊</label>
          <div class="chaos-form-item">
            <span><%= @publication_category.volume.publication.name %>第<%= @publication_category.volume.name %>期</span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">名称</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回期刊信息', path: url_for([:admin, @publication_category.volume]) %>
      </div>
    <% end %>
  </div>
</div>