<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新教学资源</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @resource], html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @resource %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">分类</label>
          <div class="chaos-form-item">
            <%= f.collection_select :category_id, ResourceCategory.all, :id, :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">标题</label>
          <div class="chaos-form-item">
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">作者</label>
          <div class="chaos-form-item">
            <%= f.text_field :author %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">单位</label>
          <div class="chaos-form-item">
            <%= f.text_field :organization %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">图片</label>
          <div class="chaos-form-item">
            <%= f.file_field :image %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">描述</label>
          <div class="chaos-form-item">
            <%= f.kindeditor :description %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">媒体类型</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.radio_button :media_type, Resource::MEDIA_TYPE_AUDIO %> 音频</li>
              <li><%= f.radio_button :media_type, Resource::MEDIA_TYPE_VIDEO %> 视频</li>
              <li><%= f.radio_button :media_type, Resource::MEDIA_TYPE_ANIMATION %> 动画</li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">媒体文件</label>
          <div class="chaos-form-item">
            <%= f.file_field :media %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否可见</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :visible, checked: true %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">是否精华</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.check_box :featured %></li>
            </ul>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">显示时间</label>
          <div class="chaos-form-item">
            <ul class="chaos-form-list inline">
              <li><%= f.datetime_select :displayed_at %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回教学资源列表', path: admin_resources_path %>
      </div>
    <% end %>
  </div>
</div>