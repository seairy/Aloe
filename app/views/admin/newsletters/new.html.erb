<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>创建新通讯</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for [:admin, @newsletter], html: { class: 'chaos-form', multipart: true } do |f| %>
      <%= render "shared/admin/error_messages", target: @newsletter %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">名称</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">图片</label>
          <div class="chaos-form-item">
            <%= f.file_field :image %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">简介</label>
          <div class="chaos-form-item">
            <%= f.kindeditor :description %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">资源URL</label>
          <div class="chaos-form-item">
            <%= f.file_field :asset_url %>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">位置</label>
          <div class="chaos-form-item">
            <%= f.text_field :position %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
        <%= chaos_button_to_return '返回通讯列表', path: admin_newsletters_path %>
      </div>
    <% end %>
  </div>
</div>