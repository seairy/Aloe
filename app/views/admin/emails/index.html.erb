<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>邮件信息</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_tag 'nil', class: 'chaos-form' do %>
      <%= chaos_flash_tag %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">未发送</label>
          <div class="chaos-form-item">
            <span><%= @unsent_email_count %>封</span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">已发送</label>
          <div class="chaos-form-item">
            <span><%= @sent_email_count %>封</span>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= chaos_button_to name: '发送全部邮件', path: send_all_admin_emails_path %>
        <%= chaos_button_to name: '清空已发送邮件', path: clean_sent_admin_emails_path, confirm: '确定要清空已发送邮件吗？' %>
        <%= chaos_button_to name: '清空未发送邮件', path: clean_unsent_admin_emails_path, confirm: '确定要清空未发送邮件吗？', class: 'btn-danger' %>
      </div>
    <% end %>
  </div>
</div>