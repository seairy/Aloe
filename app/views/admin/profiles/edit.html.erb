<div class="chaos-panel grid_8">
  <div class="chaos-panel-header">
    <span>我的账号</span>
  </div>
  <div class="chaos-panel-body no-padding">
    <%= form_for @administrator, url: admin_profile_path, html: { class: 'chaos-form' } do |f| %>
      <%= render "shared/admin/error_messages", target: @administrator %>
      <div class="chaos-form-inline">
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">角色</label>
          <div class="chaos-form-item">
            <span><%= @administrator.role.name %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">账号</label>
          <div class="chaos-form-item">
            <span><%= @administrator.account %></span>
          </div>
        </div>
        <div class="chaos-form-row bordered">
          <label class="chaos-form-label">姓名</label>
          <div class="chaos-form-item">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="chaos-button-row">
        <%= f.submit '提交', class: 'btn btn-danger' %>
        <input type="reset" value="重置" class="btn" />
      </div>
    <% end %>
  </div>
</div>